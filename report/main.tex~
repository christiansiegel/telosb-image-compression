\input{setup/preamble.tex}% package inclusion and set up of the document
\input{setup/hyphenations.tex}% 
\input{setup/macros.tex}% my new macros

\begin{document}
%frontmatter
\pagestyle{empty} %disable headers and footers
\pagenumbering{roman} %use roman page numbering in the frontmatter
\input{sections/frontpage.tex}
\cleardoublepage
\pdfbookmark[0]{Contents}{label:contents}
\pagestyle{fancy} %enable headers and footers again
\tableofcontents
\listoftodos
\cleardoublepage
%mainmatter
\pagenumbering{arabic} %use arabic page numbering in the mainmatter
\input{sections/introduction.tex}
\input{sections/theory.tex}
\input{sections/implementation.tex}
\input{sections/conclusion.tex}
\bibliography{bib/mybib}
\label{bib:mybiblio}
\appendix
\input{sections/appendix.tex}
\end{document}
